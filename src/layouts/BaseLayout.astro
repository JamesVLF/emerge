---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Exploring the intersection of computational biology, neural networks, and life's beautiful complexity" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400&family=Source+Sans+3:ital,wght@0,300;0,400;0,600;1,300;1,400&family=Fira+Code:wght@400;500&display=swap" rel="stylesheet" />
  </head>
  <body class="bg-gradient-to-br from-neural-50 via-white to-dendrite-light/10 min-h-screen">
    <!-- Decorative background elements -->
    <div class="fixed inset-0 -z-10 overflow-hidden pointer-events-none">
      <div class="absolute top-0 right-0 w-[600px] h-[600px] bg-synapse-light/5 rounded-full blur-3xl animate-pulse" style="animation-duration: 8s;"></div>
      <div class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-dendrite/5 rounded-full blur-3xl animate-pulse" style="animation-duration: 12s; animation-delay: 2s;"></div>
    </div>

    <!-- Navigation -->
    <nav class="container mx-auto px-6 py-8 relative">
      <div class="flex items-center justify-between">
        <a href="/" class="group">
          <h1 class="text-2xl md:text-3xl font-display font-semibold bg-gradient-to-r from-neural-800 via-synapse-dark to-dendrite-dark bg-clip-text text-transparent">
            James <span class="opacity-0 group-hover:opacity-100 transition-opacity duration-300">∿</span>
          </h1>
        </a>
        <div class="flex gap-8 font-body text-neural-600">
          <a href="/research" class="hover:text-synapse transition-colors duration-200 relative group">
            Research
            <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-synapse group-hover:w-full transition-all duration-300"></span>
          </a>
          <a href="/feed" class="hover:text-dendrite transition-colors duration-200 relative group">
            Feed
            <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-dendrite group-hover:w-full transition-all duration-300"></span>
          </a>
          <a href="/musings" class="hover:text-synapse-dark transition-colors duration-200 relative group">
            Office Hrs w/ Ripmaster
            <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-synapse-dark group-hover:w-full transition-all duration-300"></span>
          </a>
          <a href="/about" class="hover:text-neural-800 transition-colors duration-200 relative group">
            About
            <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-neural-800 group-hover:w-full transition-all duration-300"></span>
          </a>
        </div>
      </div>
    </nav>

    <!-- Main content -->
    <main class="container mx-auto px-6 py-12 relative">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="container mx-auto px-6 py-12 mt-24 border-t border-neural-200">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4 text-neural-500 font-body text-sm">
        <p>© {new Date().getFullYear()} James. Bridging neurons, code, and curiosity.</p>
        <div class="flex gap-6">
          <a href="mailto:contact@example.com" class="hover:text-synapse transition-colors">Email</a>
          <a href="https://github.com/yourusername" class="hover:text-dendrite transition-colors">GitHub</a>
          <a href="https://twitter.com/yourusername" class="hover:text-synapse-dark transition-colors">X</a>
        </div>
      </div>
    </footer>

    <style is:global>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      html {
        scroll-behavior: smooth;
      }
      
      body {
        font-family: 'Source Sans 3', system-ui, sans-serif;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }
    </style>
  </body>
</html>
