---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const feedPosts = (await getCollection('feed')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout title="Feed | James">
  <div class="max-w-3xl mx-auto">
    <div class="mb-16">
      <h1 class="text-5xl md:text-6xl font-display font-semibold mb-6 bg-gradient-to-r from-neural-900 to-dendrite-dark bg-clip-text text-transparent">
        Feed
      </h1>
      <p class="text-xl text-neural-600 font-body leading-relaxed">
        Quick thoughts, lab updates, and daily observations from the bench and beyond.
      </p>
    </div>

    <div class="space-y-6">
      {feedPosts.map((post) => (
        <article class="bg-white/60 backdrop-blur-sm rounded-lg p-6 border border-neural-200 hover:border-dendrite-light transition-all duration-200">
          <time class="text-xs font-mono text-neural-500 mb-3 block">
            {post.data.pubDate.toLocaleDateString('en-US', { 
              year: 'numeric', 
              month: 'short', 
              day: 'numeric',
              hour: '2-digit',
              minute: '2-digit'
            })}
          </time>
          
          {post.data.title && (
            <h2 class="text-lg font-display font-semibold mb-2 text-neural-800">
              {post.data.title}
            </h2>
          )}
          
          <div class="prose prose-sm max-w-none text-neural-700 font-body">
            {post.body}
          </div>
        </article>
      ))}
    </div>
  </div>
</BaseLayout>
