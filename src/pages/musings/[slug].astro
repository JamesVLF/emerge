---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('musings');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<BaseLayout title={`${post.data.title} | Musings`} description={post.data.description}>
  <article class="max-w-3xl mx-auto">
    <!-- Back link -->
    <a href="/musings" class="inline-flex items-center gap-2 text-neural-600 hover:text-synapse-dark transition-colors font-body mb-8">
      <span>‚Üê</span> Back to musings
    </a>

    <!-- Header -->
    <header class="mb-12">
      <div class="flex items-center gap-4 mb-4">
        <time class="text-sm font-mono text-neural-500">
          {post.data.pubDate.toLocaleDateString('en-US', { 
            year: 'numeric', 
            month: 'long', 
            day: 'numeric' 
          })}
        </time>
        {post.data.category && (
          <span class="text-xs font-mono px-3 py-1 bg-synapse-light/20 text-synapse-dark rounded-full">
            {post.data.category}
          </span>
        )}
      </div>
      
      <h1 class="text-4xl md:text-5xl font-display font-semibold mb-4 leading-tight">
        <span class="bg-gradient-to-r from-neural-900 via-synapse-dark to-neural-700 bg-clip-text text-transparent italic">
          {post.data.title}
        </span>
      </h1>
      
      {post.data.description && (
        <p class="text-xl text-neural-600 font-body leading-relaxed italic">
          {post.data.description}
        </p>
      )}
      
      {post.data.tags && (
        <div class="flex flex-wrap gap-2 mt-6">
          {post.data.tags.map((tag) => (
            <span class="text-xs font-mono px-3 py-1 bg-neural-100 text-neural-600 rounded-full">
              {tag}
            </span>
          ))}
        </div>
      )}
    </header>

    <!-- Content -->
    <div class="prose prose-lg max-w-none">
      <Content />
    </div>
  </article>
</BaseLayout>

<style is:global>
  .prose {
    @apply text-neural-700 font-body;
  }
  
  .prose h2 {
    @apply text-3xl font-display font-semibold text-neural-800 mt-12 mb-6;
  }
  
  .prose h3 {
    @apply text-2xl font-display font-semibold text-neural-800 mt-8 mb-4;
  }
  
  .prose p {
    @apply mb-6 leading-relaxed;
  }
  
  .prose ul, .prose ol {
    @apply mb-6 ml-6 space-y-2;
  }
  
  .prose li {
    @apply leading-relaxed;
  }
  
  .prose a {
    @apply text-synapse hover:text-synapse-dark underline transition-colors;
  }
  
  .prose code {
    @apply font-mono text-sm bg-neural-100 px-2 py-1 rounded text-synapse-dark;
  }
  
  .prose pre {
    @apply bg-neural-900 text-neural-50 p-4 rounded-lg overflow-x-auto;
  }
  
  .prose pre code {
    @apply bg-transparent text-neutral-50 p-0;
  }
  
  .prose blockquote {
    @apply border-l-4 border-synapse-light pl-4 italic text-neural-600 my-6;
  }
  
  .prose hr {
    @apply border-neural-200 my-12;
  }
  
  .prose em {
    @apply italic text-neural-600;
  }
</style>
